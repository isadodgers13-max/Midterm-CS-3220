package servlets;
import dao.ClassDAO;
import dao.StudentDAO;
import dao.EnrollmentDAO;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.*;
import java.io.IOException;
import java.util.List;

@WebServlet(name="AssignStudentServlet", urlPatterns={"/assign"})
public class AssignStudentServlet extends HttpServlet {
    private ClassDAO classDAO = new ClassDAO();
    private StudentDAO studentDAO = new StudentDAO();
    private EnrollmentDAO enrollDAO = new EnrollmentDAO();

    @Override
    protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
        try {
            List<model.SwimClass> classes = classDAO.classesForSession(1); // optionally fetch all or by session param
            if (req.getParameter("sessionId") != null) {
                int sid = Integer.parseInt(req.getParameter("sessionId"));
                classes = classDAO.classesForSession(sid);
            }
            req.setAttribute("classes", classes);
            req.setAttribute("students", studentDAO.all());
            // optionally pre-select class if classId param present
            req.getRequestDispatcher("/WEB-INF/views/assign.jsp").forward(req, resp);
        } catch (Exception e) {
            throw new ServletException(e);
        }
    }

    @Override
    protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
        String classIdStr = req.getParameter("classId");
        String studentIdStr = req.getParameter("studentId");
        String error = null;
        int classId = -1, studentId = -1;
        try {
            classId = Integer.parseInt(classIdStr);
            studentId = Integer.parseInt(studentIdStr);
        } catch (NumberFormatException e) {
            error = "Please select a class and student.";
        }

        if (error != null) {
            req.setAttribute("error", error);
            doGet(req, resp);
            return;
        }

        try {
            enrollDAO.assignStudentToClass(studentId, classId);
            resp.sendRedirect(req.getContextPath() + "/classes");
        } catch (Exception e) {
            String msg = e.getMessage();
            if (msg != null && msg.contains("Duplicate")) {
                req.setAttribute("error", "Student already assigned to this class.");
                doGet(req, resp);
            } else {
                throw new ServletException(e);
            }
        }
    }
}jj
